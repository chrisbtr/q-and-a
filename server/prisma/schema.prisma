generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  firstName String      @db.VarChar(255)
  lastName  String      @db.VarChar(255)
  email     String      @unique @db.VarChar(255)
  password  String
  questions Questions[]
  answers   Answers[]
}

model Answers {
  id         Int       @id @default(autoincrement())
  userId     Int
  questionId Int
  content    String    @db.VarChar(255)
  createdAt  DateTime
  editedAt   DateTime?
  user       User      @relation(fields: [userId], references: [id])
  questions  Questions @relation(fields: [questionId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_question_id")
}

model Categories {
  code        String      @id @db.VarChar(100)
  name        String      @db.VarChar(50)
  description String?     @db.VarChar(255)
  questions   Questions[]
}

model Questions {
  id           Int        @id @default(autoincrement())
  userId       Int
  categoryCode String     @db.VarChar(100)
  isAnswered   Boolean
  title        String     @db.VarChar(20)
  subject      String?    @default("") @db.VarChar(100)
  content      String     @db.VarChar(255)
  createdAt    DateTime
  editedAt     DateTime?
  user         User       @relation(fields: [userId], references: [id])
  categories   Categories @relation(fields: [categoryCode], references: [code], onDelete: NoAction, onUpdate: NoAction, map: "fk_category_code")
  answers      Answers[]
}
